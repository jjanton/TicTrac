<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#206C91"
    tools:context=".session.presession.SessionSetupFragment">

    <EditText
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:hint="Enter value for timer"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Enter value for timer" />

    <EditText
        android:id="@+id/ticNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Enter Tic Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Enter Tic Name" />

    <ToggleButton
        android:id="@+id/motionSensorToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="48dp"
        android:textOff="@string/motion_off"
        android:textOn="@string/motion_on"
        app:layout_constraintEnd_toStartOf="@+id/motionSensorRadioGroup"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerTextView" />

    <ToggleButton
        android:id="@+id/audioSensorToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="16dp"
        android:textOff="@string/mic_off"
        android:textOn="@string/mic_on"
        app:layout_constraintEnd_toStartOf="@+id/audioSensorRadioGroup"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/motionSensorToggleButton" />

    <RadioGroup
        android:id="@+id/audioSensorRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/audioSensorToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/audioSensorToggleButton"
        app:layout_constraintTop_toBottomOf="@id/motionSensorToggleButton"
        app:layout_constraintTop_toTopOf="@+id/audioSensorToggleButton"
        app:layout_constraintVertical_bias="0.75">

        <RadioButton
            android:id="@+id/lowAudio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Low"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/mediumAudio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Medium"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/highAudio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="High"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="317dp"
            tools:layout_editor_absoluteY="397dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/motionSensorRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/motionSensorToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/motionSensorToggleButton"
        app:layout_constraintTop_toBottomOf="@id/timerTextView"
        app:layout_constraintTop_toTopOf="@+id/motionSensorToggleButton"
        app:layout_constraintVertical_bias="1.0">

        <RadioButton
            android:id="@+id/lowHaptic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Low"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/mediumHaptic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Medium"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/highHaptic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="High"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="317dp"
            tools:layout_editor_absoluteY="397dp" />

    </RadioGroup>

    <Button
        android:id="@+id/startSessionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="@string/begin_session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/hapticFeedbackToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="305dp"
        android:textOff="@string/haptic_feedback_off"
        android:textOn="@string/haptic_feedback_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/audioSensorToggleButton" />


</androidx.constraintlayout.widget.ConstraintLayout>