<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".session.presession.SessionSetupFragment">

    <TimePicker
        android:id="@+id/timerPicker"
        android:layout_width="411dp"
        android:layout_height="357dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <EditText-->
    <!--        android:id="@+id/timerEditText"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginHorizontal="16sp"-->
    <!--        android:layout_marginBottom="16sp"-->
    <!--        android:inputType="number"-->
    <!--        android:textAlignment="center"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/hapticFeedbackToggleButton"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintVertical_bias="0.88"-->
    <!--        app:layout_constraintVertical_chainStyle="packed" />-->

    <ToggleButton
        android:id="@+id/hapticFeedbackToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16sp"
        android:textOff="@string/haptic_feedback_off"
        android:textOn="HAPTIC: ON"
        app:layout_constraintBottom_toTopOf="@+id/audioFeedbackToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerPicker"
        app:layout_constraintVertical_bias="0.49" />

    <ToggleButton
        android:id="@+id/audioFeedbackToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginBottom="16sp"
        android:textOff="AUDIO: OFF"
        android:textOn="AUDIO: ON"
        app:layout_constraintBottom_toTopOf="@+id/visualFeedbackToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hapticFeedbackToggleButton" />

    <ToggleButton
        android:id="@+id/visualFeedbackToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16sp"
        android:layout_marginBottom="16sp"
        android:textOff="VISUAL: OFF"
        android:textOn="VISUAL: ON"
        app:layout_constraintBottom_toTopOf="@+id/startSessionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audioFeedbackToggleButton" />

    <Button
        android:id="@+id/startSessionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/begin_session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerPicker"
        app:layout_constraintVertical_bias="0.92" />

    <RadioGroup
        android:id="@+id/HapticRadioGroup"
        android:layout_width="247dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/hapticFeedbackToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hapticFeedbackToggleButton"
        app:layout_constraintVertical_bias="0.49">

        <RadioButton
            android:id="@+id/lowHaptic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Low"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/mediumHaptic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Medium"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/highHaptic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="High"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="317dp"
            tools:layout_editor_absoluteY="397dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/AudioRadioGroup"
        android:layout_width="247dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/startSessionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HapticRadioGroup"
        app:layout_constraintVertical_bias="0.26">

        <RadioButton
            android:id="@+id/lowAudio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Low"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/mediumAudio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Medium"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="397dp" />

        <RadioButton
            android:id="@+id/highAudio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="High"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="317dp"
            tools:layout_editor_absoluteY="397dp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>